<body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="logo"><%= link_to "Auto Lotto", :action => "index" %></div>
        <nav>
          <ul class="nav navbar-nav pull-right">
            <div class="navlinks"><%= link_to "Active Tickets", :action => "index"%> | |
            <%= link_to "Expired Tickets", :action => "expired"%> | | 
            <%= link_to "Logout", {:controller => 'access', :action => 'logout'} %></div>
          </ul>
        </nav>
      </div>
    </header>
 
<h1 align="center">Expired Tickets<br>
</h1>
<div align=center>Current Date/Time in Nevada: <%= @nevada_now.to_formatted_s(:db) %>
<br>Numbers were checked at 21:00:00 on the 'drawing' dates specified below.
</div>
<br>
<table align="center">
  <tr>
    <% count = 0 %>
    <% @expired_sets.each do |set| %>
      <% count += 1 %>
      <td align="center" bgcolor="LightGrey" class="expired_tickets">
        <%= image_tag("rip.png", :alt => "RIP", :height => 27) %> <br>
        <font size = 4> 
        Winning Numbers: <br></font>
        <font size = 6>
        ## ## ## ## ## ##</font><br>
        <font size = 4>
        Drawn: <%= set.check_date.to_date %> <br>
        Your Ticket: <%= set.set %>
        </font><br>
        <strong> Group Members Included: 
        
        <% set.emails.each do |email| %>
          <br><font size = 2><%= email.email %></font>
        <% end %>
        
        <% if set.emails == [] %>
          (none)</strong>
        <% end %>
        <br>
        
          <font size=1>
            <%= link_to "Delete Permanently", :action => "destroy", :id => set.id %>
          </font>
        </h3>
      </td>
      <% if count > 4 %>
        </tr><tr>
        <% count = 0 %>
      <% end %>
    <% end %>
  </tr>
</table>

<% if @expired_sets == [] %>
  <br><br><div align=center><font color=red>No expired tickets in the system.</font></div>
<% end %>  

</body>