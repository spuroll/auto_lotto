<%= render 'layouts/header' %>

<div align="center" style="color:red"><% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%></div>

<br><br>    
<%= form_for(:number_set, :url => {:action => "create"}) do |f| %> 
  <table align = center>
    <tr><th>Enter number set with spaces (## ## ## ## ## ##):</th>
    <td><%= f.text_field :set %></td></tr>
    <tr><th>Enter draw date in year-month-day format (YYYY-MM-DD):</th>
    <td><%= f.text_field :check_date %></td></tr>
  </table>

  <div align=center><%= submit_tag("Add Numbers") %></div>
<% end %>


